<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marble"
    tools:context=".Database.AddFood">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/food_logo" />

    <EditText
        android:id="@+id/AddFoodDescription"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/logo2"
        android:textColorHint="@color/black"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#4F737577"
        android:hint="Description"

        android:textSize="13sp"/>
    <EditText
        android:id="@+id/AddFoodDiscount"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="#4F737577"
        android:ems="10"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/AddFoodDescription"
        android:layout_below="@+id/AddFoodDescription"
        android:textSize="13sp"
        android:hint="Discount"/>

    <EditText
        android:id="@+id/AddFoodImage"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="#4F737577"
        android:ems="10"
        android:hint="Image link"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/AddFoodDiscount"
        android:layout_below="@+id/AddFoodDiscount"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/AddFoodName"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="#4F737577"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/AddFoodImage"
        android:layout_below="@+id/AddFoodImage"
        android:textSize="13sp" />
    <EditText
        android:id="@+id/AddFoodPrice"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="#4F737577"
        android:ems="10"
        android:hint="Price"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/AddFoodName"
        android:layout_below="@+id/AddFoodName"
        android:textSize="13sp" />

    <Button
        android:id="@+id/AddFood_btn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/AddFoodPrice"
        android:layout_centerHorizontal="true"
        android:background="#4F737577"
        android:text="Add Food" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>